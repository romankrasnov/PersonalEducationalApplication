<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootAnswerFragmentContainer"
    tools:context=".main.Views.AnswerContentFragment">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card"
        card:cardUseCompatPadding="true"
        card:cardElevation="4dp"
        card:cardBackgroundColor="@color/color_card"
        card:cardCornerRadius="4dp">
        <FrameLayout
            android:id="@+id/cardChildContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/answerItemScrollView"
                android:scrollbarStyle="outsideOverlay"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/scrollLayout">
                    <TextView
                        android:id="@+id/contentView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="textStart"
                        android:gravity="start"
                        tools:textSize="18sp" />
                </LinearLayout>
            </ScrollView>

            <com.smallredtracktor.yourpersonaleducationalapplication.main.Utils.PhotoUtils.CustomSubsamplingScaleImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>